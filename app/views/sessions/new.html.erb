<h2 class="ui center aligned icon header">
	Welcome in message me app
  <i class="inverted orange circular power off icon log-in"></i>

  Log in
</h2>


<div class='flash-space'>
  <%= render 'layouts/flash' %>
</div>



<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_for :session do |f| %>

          <div class="field">
            <%= f.label "username" %>
            <div class="ui left icon input">
              <%=f.text_field :username, type:"text",placeholder:'Username' %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label "Password" %>
            <div class="ui left icon input">
              <%=f.password_field :password, type:'password' %>
              <i class="lock icon"></i>
            </div>
          </div>
            <%= button_tag( :class => "ui orange submit button") do %>
              <i class='handshake outline icon'></i>  Log in 
            <% end %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

